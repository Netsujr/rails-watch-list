<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1544437152-984ea4e6352a?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80);">
  <div class="container">
    <h1>Its Movie Night</h1>
    <p>Choose from the lists or create your own</p>
    <div> <%= link_to 'Create List', "#scroll", class: "btn btn-red"%>
    </div>
  </div>
</div>

<br>
<%# these are the lists %>
<div class='container'>
  <div class='custom-cards'>
    <% @lists.each do |list| %>
      <div class="card-title" style= url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : "" %>)>
          <div class="card-title-content"><%= link_to "#{list.name}", list_path(list) %>
          </div>
          <div class="card-delete btn">
          <%= link_to '', list_path(list), method: :delete, data: { confirm: 'Are you sure brah?'}, class: "fas fa-skull-crossbones"%>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>
<%# This is the form to create new shit %>
<div class="container my-5 border border-dark p-4" id="scroll">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1>Create a list</h1>
      <%= simple_form_for [@list] do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.submit 'Create', class: 'btn-lg btn-red' %>
      <% end %>
    </div>
  </div>
</div>
